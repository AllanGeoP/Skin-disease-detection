<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_2"
    tools:context=".docregistraion">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#3fff"
            android:gravity="center"
            android:padding="10dp"
            tools:ignore="MissingConstraints">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Docter Registration"
                android:textSize="30dp"
                android:textColor="#31AEE8"

                android:layout_marginBottom="24dp"/>

            <EditText
                android:id="@+id/docName"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:hint="Name"
                android:gravity="center"
                android:inputType="text"
                android:background="@drawable/custombutton"
                android:textColorHint="#FFFBF6"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/docEmail"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/custombutton"
                android:textColorHint="#FFFBF6"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/docPhone"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:hint="Phone"
                android:inputType="phone"
                android:background="@drawable/custombutton"
                android:textColorHint="#FFFBF6"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/docSpecialization"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:hint="Specialization"
                android:background="@drawable/custombutton"
                android:textColorHint="#FFFBF6"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/docpassword"
                android:layout_width="250dp"
                android:gravity="center"
                android:layout_height="40dp"
                android:hint="Password"
                android:background="@drawable/custombutton"
                android:textColorHint="#FFFBF6"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/docbuttonRegister"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="#FFFBF6"
                android:background="@drawable/custombutton2"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/docalready"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login here "
                android:textColor="#FFFBF6"
                android:hint="#FFFBF6"
                android:layout_marginTop="15dp"
                android:buttonTint="#FFFBF6"
                />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
