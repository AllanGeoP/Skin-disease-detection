<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_2"
    tools:context=".ui.home.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/upload1"
                android:layout_marginTop="00dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="DIAGNOSE IMAGE"
                />




    <androidx.cardview.widget.CardView
        android:id="@+id/open_camera_button"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginHorizontal="30dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:src="@drawable/img"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCAN IMAGE"
            android:layout_marginTop="200dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            android:textSize="30dp"/>
    </androidx.cardview.widget.CardView>
<!--    <Button-->
<!--        android:id="@+id/open_camera_button"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Open Camera"-->
<!--        />-->
        <androidx.cardview.widget.CardView
            android:id="@+id/chose_image_button"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginHorizontal="30dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dp"
                android:src="@drawable/up"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHOOSE IMAGE"
                android:layout_marginTop="200dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:textSize="30dp"/>
        </androidx.cardview.widget.CardView>
<!--    <Button-->
<!--        android:id="@+id/chose_image_button"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/open_camera_button"-->
<!--        android:text="Choose Image" />-->

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chose_image_button"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:visibility="gone" />

<!--            <androidx.cardview.widget.CardView-->
<!--                android:id="@+id/upload1"-->
<!--                android:layout_width="500dp"-->
<!--                android:layout_height="250dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginLeft="0dp"/>-->


    <ImageView
        android:id="@+id/imgupload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload1"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
